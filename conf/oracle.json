{
  "setting": {
    "jdbcSource": {
      "url": "jdbc:oracle:thin:@127.0.0.1:1521/",
      "dbName": "ORCLCDB",
      "driverClass": "oracle.jdbc.OracleDriver",
      "jdbcProperties": [
        {
          "name": "user",
          "value": "gop"
        },
        {
          "name": "password",
          "value": "gop"
        }
      ]
    },
    "source": "oracle-local",
    "timeInterval": 1000,
    "consolePrint": true,
    "pageSize": "10",
    "retention": "2",
    "printCSV": false,
    "fileLog": {
      "enable": true,
      "logPath": "data/"
    },
    "api": {
      "enable": true,
      "port": 18080,
      "threadPoolSize": 4,
      "logPath": "data/api.log"
    }
  },
  "measure": [
    {
      "name": "sessions",
      "diff": false,
      "sql": "select count(*) from v$session",
      "tag": "oracle",
      "alertValue": 100,
      "alertPolicy": 1
    },
    {
      "name": "user_commits",
      "diff": true,
      "sql": "select value from v$sysstat where name = 'user commits'",
      "tag": "oracle"
    },
    {
      "name": "user_rollbacks",
      "diff": true,
      "sql": "select value from v$sysstat where name = 'user rollbacks'",
      "tag": "oracle"
    },
    {
      "name": "db_time",
      "diff": true,
      "sql": "select value from v$sys_time_model where stat_name = 'DB time'",
      "tag": "oracle"
    }
  ]
}